<h2 class="page-header">Buscar Usuarios</h2>
<form action="/users" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Nombre</label>
            <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
</form>
<br>
<% users.forEach(user => { %>
    <div class="author-row">
        <div class="author-name">
            <%= user.usrname %>
        </div>
        <div class="btn-row">
            <a class="btn btn-primary" href="/users/<%= user.id %>">Ver</a>
            <a class="btn btn-primary" href="/users/<%= user.id %>/edit">Editar</a>
            <%- include('../partials/deleteForm',
                  { url: `/users/${user.id}` }) %>
        </div>
    </div>
    <% }) %>